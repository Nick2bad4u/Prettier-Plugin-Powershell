{
    "name": "prettier-plugin-powershell",
    "version": "1.0.7",
    "description": "Prettier plugin for formatting PowerShell source files with idiomatic defaults.",
    "keywords": [
        "prettier",
        "prettier-plugin",
        "powershell",
        "formatter"
    ],
    "homepage": "https://github.com/Nick2bad4u/prettier-plugin-powershell",
    "bugs": {
        "url": "https://github.com/Nick2bad4u/prettier-plugin-powershell/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Nick2bad4u/prettier-plugin-powershell.git"
    },
    "license": "UnLicense",
    "type": "module",
    "files": [
        "dist"
    ],
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "require": "./dist/index.cjs"
        }
    },
    "scripts": {
        "build": "tsup src/index.ts --format esm,cjs --dts src/index.ts --dts-resolve --clean --sourcemap --tsconfig tsconfig.json --shims --treeshake safest --cjsInterop --metafile",
        "build:watch": "tsup src/index.ts --format esm,cjs --dts --watch",
        "clean": "rimraf dist",
        "lint": "eslint --cache --cache-strategy content --cache-location .cache/.eslintcache && echo \"Eslint done!\"",
        "lint:fix": "eslint --cache --cache-strategy content --cache-location .cache/.eslintcache --fix && echo \"Eslint done!\"",
        "format": "prettier \"src/**/*.{ts,tsx}\" \"tests/**/*.{ts,tsx}\" --write",
        "test": "vitest run",
        "test:ci": "vitest run --reporter=summary",
        "test:debug": "vitest --inspect-brk",
        "test:coverage": "vitest run --coverage",
        "test:watch": "vitest",
        "typecheck": "tsc --project tsconfig.json --noEmit",
        "prepare": "npm run build"
    },
    "peerDependencies": {
        "prettier": "^3.0.0"
    },
    "devDependencies": {
        "@types/node": "^24.10.0",
        "@typescript-eslint/eslint-plugin": "^8.46.3",
        "@typescript-eslint/parser": "^8.46.3",
        "@vitest/coverage-v8": "^4.0.7",
        "eslint": "^9.39.1",
        "eslint-config-prettier": "^10.1.8",
        "eslint-import-resolver-typescript": "^4.4.4",
        "eslint-plugin-import": "^2.32.0",
        "prettier": "^3.6.2",
        "rimraf": "^6.1.0",
        "tsup": "^8.5.0",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.46.3",
        "vitest": "^4.0.7"
    },
    "engines": {
        "node": ">=18.12.0"
    },
    "packageManager": "npm@11.6.2"
}
