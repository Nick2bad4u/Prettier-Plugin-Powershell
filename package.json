{
    "name": "prettier-plugin-powershell",
    "$schema": "https://www.schemastore.org/package.json",
    "version": "2.0.5",
    "description": "Prettier plugin for formatting PowerShell source files with idiomatic defaults.",
    "keywords": [
        "prettier",
        "prettier-plugin",
        "powershell",
        "formatter"
    ],
    "homepage": "https://github.com/Nick2bad4u/prettier-plugin-powershell",
    "bugs": {
        "url": "https://github.com/Nick2bad4u/prettier-plugin-powershell/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Nick2bad4u/prettier-plugin-powershell.git"
    },
    "license": "UnLicense",
    "type": "module",
    "files": [
        "dist"
    ],
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "require": "./dist/index.cjs"
        }
    },
    "scripts": {
        "build": "tsup src/index.ts --format esm,cjs --dts src/index.ts --dts-resolve --clean --sourcemap --tsconfig tsconfig.json --shims --treeshake safest --cjsInterop --metafile",
        "build:watch": "tsup src/index.ts --format esm,cjs --dts --watch",
        "clean": "rimraf dist",
        "lint": "eslint --cache --cache-strategy content --cache-location .cache/.eslintcache && echo \"Eslint done!\"",
        "lint:fix": "eslint --cache --cache-strategy content --cache-location .cache/.eslintcache --fix && echo \"Eslint done!\"",
        "format": "prettier \"src/**/*.{ts,tsx}\" \"tests/**/*.{ts,tsx}\" --write",
        "test": "vitest run",
        "test:fuzz": "pwsh -NoLogo -NoProfile -Command \"$env:POWERSHELL_PROPERTY_RUNS=2000; npm run test\"",
        "test:ci": "vitest run --reporter=summary",
        "test:debug": "vitest --inspect-brk",
        "test:coverage": "vitest run --coverage",
        "test:watch": "vitest",
        "typecheck": "tsc --project tsconfig.json --noEmit",
        "benchmark": "node benchmark.mjs",
        "profile": "node profile-parser.mjs",
        "profile:enhanced": "node profile-enhanced.mjs",
        "prepare": "npm run build"
    },
    "devDependencies": {
        "@types/node": "^24.10.1",
        "@typescript-eslint/eslint-plugin": "^8.46.4",
        "@typescript-eslint/parser": "^8.46.4",
        "@vitest/coverage-v8": "^4.0.8",
        "eslint": "^9.39.1",
        "eslint-config-prettier": "^10.1.8",
        "eslint-import-resolver-typescript": "^4.4.4",
        "eslint-plugin-import": "^2.32.0",
        "fast-check": "^4.3.0",
        "prettier-plugin-ini": "^1.3.0",
        "prettier-plugin-interpolated-html-tags": "^2.0.1",
        "prettier-plugin-jsdoc": "^1.5.0",
        "prettier-plugin-merge": "^0.8.0",
        "prettier-plugin-multiline-arrays": "^4.0.3",
        "prettier-plugin-packagejson": "^2.5.19",
        "prettier-plugin-properties": "^0.3.0",
        "prettier-plugin-sort-json": "^4.1.1",
        "prettier-plugin-sql": "^0.19.2",
        "prettier-plugin-tailwindcss": "^0.7.1",
        "typescript-eslint": "^8.46.4",
        "vitest": "^4.0.8"
    },
    "engines": {
        "node": ">=18.12.0"
    },
    "packageManager": "npm@11.6.2",
    "dependencies": {
        "prettier": "^3.6.2",
        "rimraf": "^6.1.0",
        "tsup": "^8.5.1",
        "typescript": "^5.9.3"
    }
}
